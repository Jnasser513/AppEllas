<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#8C1438"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/minimum_gap"
            android:background="@drawable/home_card_style"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/floating_action_user"
            tools:ignore="MissingConstraints,UnknownIdInLayout">

            <TextView
                android:id="@+id/tittle_text_view"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/minimum_gap"
                android:layout_marginLeft="@dimen/minimum_gap"
                android:layout_marginTop="@dimen/minimum_gap"
                android:text="ASALTO SEXUAL"
                android:textColor="#FFC58F"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subtittle_text_view"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/minimum_gap"
                android:layout_marginLeft="@dimen/minimum_gap"
                android:layout_marginTop="5dp"
                android:text="NO TE QUEDES SOLO"
                android:textColor="#FFC58F"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description_text_view"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/minimum_gap"
                android:layout_marginLeft="@dimen/minimum_gap"
                android:layout_marginTop="@dimen/default_gap"
                android:text="Comuniquese con un amigo o una persona de tu total confianza.
                     Hay personas que pueden brindarle el apoyo emocional..."
                android:textColor="#FFC58F"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>